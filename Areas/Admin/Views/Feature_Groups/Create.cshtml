@model DataLayer.Feature_Groups




@using (Ajax.BeginForm("Create" , "Feature_Groups" , FormMethod.Post , new AjaxOptions()
{
    OnSuccess= "Succesas",
    UpdateTargetId = "listfeature"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.FeatureParentID)
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FeatureGroupTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeatureGroupTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FeatureGroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>

     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت" class="btn btn-success" />
            </div>
        </div>
    </div>
}

